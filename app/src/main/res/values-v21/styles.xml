<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/changetransformsharedelements</item>
        <item name="android:windowSharedElementExitTransition">@transition/changetransformsharedelements</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <!-- Login Activity Theme -->
    <style name="AppTheme.Login" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Services Activity Theme -->
    <style name="AppTheme.Services" parent="AppTheme">
        <item name="android:colorButtonNormal">@color/lb700</item>
        <item name="android:colorPrimary">@color/lb600</item>
        <item name="android:colorPrimaryDark">@color/lb800</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/lb700</item>
        <item name="colorPrimary">@color/lb600</item>
        <item name="colorPrimaryDark">@color/lb800</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>