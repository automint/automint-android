<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.automint.crn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="AutomintApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true">

        <activity android:name=".login.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.Login">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".services.ViewServices"
            android:label="@string/title_activity_service_ra"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.Services" />

        <activity android:name=".services.AddService"
            android:label="@string/title_activity_service_add"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.Services" />

        <activity android:name=".services.sections.TreatmentsActivity"
            android:label="@string/title_activity_service_treatments"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.Services" />

        <activity android:name=".services.sections.PartsActivity"
            android:label="@string/title_activity_service_parts"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.Services" />

    </application>

</manifest>
